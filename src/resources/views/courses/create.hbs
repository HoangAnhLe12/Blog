<div class='mt-4'>
   <h3>Create course</h3>
   <form method='POST' action='/courses/store' class='row g-3'>
      <div class='col-md-12'>
         <label for='inputName' class='form-label'>Name</label>
         <input type='text' class='form-control' id='inputName' name='name' />
      </div>
      <div class='col-md-12'>
         <label for='inputDes' class='form-label'>Description</label>
         <input type='text' class='form-control' id='inputDes' name='description' />
      </div>
      <div class='col-md-12'>
         <label for='videoId' class='form-label'>VideoId</label>
         <input type='text' class='form-control' id='videoId' name='videoId' />
      </div>

      <div class='col-12'>
         <button type='submit' class='btn btn-primary'>CREATE</button>
      </div>
   </form>
</div>